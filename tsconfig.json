{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["ES2022"],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "paths": {
      "@core/*": ["./src/core/*"],
      "@agents/*": ["./src/agents/*"],
      "@mcp/*": ["./src/mcp/*"],
      "@views/*": ["./src/views/*"],
      "@webviews/*": ["./src/webviews/*"],
      "@types/*": ["./src/types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests", ".tmp"]
}
