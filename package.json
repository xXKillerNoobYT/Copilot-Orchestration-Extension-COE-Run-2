{
  "name": "copilot-orchestration-extension",
  "displayName": "Copilot Orchestration Extension (COE)",
  "description": "An intelligent planning, orchestration, and tracking layer for AI-assisted software development — orchestrates AI coding agents via MCP, SQLite, and local LLMs",
  "version": "1.0.0",
  "publisher": "coe-dev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/coe-dev/copilot-orchestration-extension"
  },
  "icon": "resources/coe-icon.png",
  "galleryBanner": {
    "color": "#1e1e2e",
    "theme": "dark"
  },
  "keywords": [
    "ai",
    "copilot",
    "orchestration",
    "mcp",
    "planning",
    "task management",
    "agents",
    "code generation",
    "verification",
    "lm studio"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "AI",
    "Machine Learning"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "coe-sidebar",
          "title": "Copilot Orchestration",
          "icon": "resources/coe-icon.svg"
        }
      ]
    },
    "views": {
      "coe-sidebar": [
        {
          "id": "coe-status",
          "name": "Status"
        }
      ]
    },
    "commands": [
