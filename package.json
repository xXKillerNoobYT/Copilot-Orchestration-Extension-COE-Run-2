      },
      {
        "command": "coe.createTicket",
        "title": "COE: Create Ticket"
      },
      {
        "command": "coe.resolveTicket",
        "title": "COE: Resolve Ticket"
      },
      {
        "command": "coe.openTicketPanel",
        "title": "COE: Open Ticket Detail"
      },
      {
        "command": "coe.getNextTask",
        "title": "COE: Get Next Task"
      },
      {
        "command": "coe.markTaskDone",
        "title": "COE: Mark Task Done"
      },
      {
