      },
      {
        "command": "coe.refreshStatus",
        "title": "COE: Refresh Status",
        "icon": "$(refresh)"
      },
      {
        "command": "coe.openPlanBuilder",
        "title": "COE: Open Visual Plan Builder"
      },
      {
        "command": "coe.exportPlanAsMarkdown",
        "title": "COE: Export Plan as Markdown"
      },
      {
        "command": "coe.openProjectStatus",
        "title": "COE: Open Project Status"
      },
      {
        "command": "coe.openDesigner",
        "title": "COE: Open Visual Designer"
      },
      {
        "command": "coe.quickReport",
        "title": "COE: Quick Report Issue"
      },
      {
        "command": "coe.showPlanVersions",
        "title": "COE: Show Plan Versions"
      },
      {
        "command": "coe.generateCode",
        "title": "COE: Generate Code from Design"
      }
    ],
    "viewsWelcome": [
      {
        "view": "coe-status",
        "contents": "COE is starting up...\n[Open COE App](command:coe.openApp)\nOpen the full management interface in your browser."
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "coe.openApp",
          "when": "view == coe-status",
          "group": "navigation"
        },
        {
          "command": "coe.refreshStatus",
          "when": "view == coe-status",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Copilot Orchestration Extension",
      "properties": {
        "coe.llm.endpoint": {
          "type": "string",
          "default": "http://192.168.1.205:1234/v1",
          "description": "LLM API endpoint (OpenAI-compatible)"
        },
        "coe.llm.model": {
          "type": "string",
          "default": "mistralai/ministral-3-14b-reasoning",
          "description": "Model identifier for the LLM"
        },
        "coe.llm.timeoutSeconds": {
          "type": "number",
          "default": 1800,
          "description": "Total wall-clock timeout for LLM requests in seconds (30 min default for local models)"
        },
        "coe.llm.startupTimeoutSeconds": {
          "type": "number",
          "default": 600,
          "description": "Timeout waiting for first token from LLM (600s = 10 min for cold model loading)"
        },
        "coe.llm.maxTokens": {
          "type": "number",
          "default": 4000,
          "description": "Maximum tokens per LLM response"
        },
        "coe.llm.streamStallTimeoutSeconds": {
          "type": "number",
          "default": 180,
          "description": "Liveness check interval — aborts if zero new tokens (content or thinking) in this period"
        },
        "coe.taskQueue.maxPending": {
          "type": "number",
          "default": 20,
          "description": "Maximum pending tasks in queue"
        },
        "coe.verification.delaySeconds": {
          "type": "number",
          "default": 60,
          "description": "Seconds to wait after task completion before verification"
        },
        "coe.watcher.debounceMs": {
          "type": "number",
          "default": 500,
          "description": "File watcher debounce in milliseconds"
        },
        "coe.github.token": {
          "type": "string",
          "default": "",
          "description": "GitHub personal access token for issue sync"
        },
        "coe.github.owner": {
          "type": "string",
          "default": "",
          "description": "GitHub repository owner"
        },
        "coe.github.repo": {
          "type": "string",
          "default": "",
          "description": "GitHub repository name"
        },
        "coe.github.syncIntervalMinutes": {
          "type": "number",
          "default": 5,
          "description": "How often to auto-sync GitHub issues (minutes)"
        },
        "coe.github.autoImport": {
          "type": "boolean",
          "default": false,
          "description": "Automatically import new GitHub issues as tasks"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "node esbuild.config.js --production",
    "watch": "node esbuild.config.js --watch",
    "lint": "eslint src --ext ts",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:headed": "npx playwright test --headed",
    "test:e2e:report": "npx playwright show-report e2e/playwright-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "esbuild": "^0.19.12",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "js-yaml": "^4.1.0"
  }
}
