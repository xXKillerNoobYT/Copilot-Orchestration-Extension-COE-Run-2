        "title": "COE: Open Agent Gallery"
      },
      {
        "command": "coe.runVerification",
        "title": "COE: Run Verification"
      },
      {
        "command": "coe.openVerificationPanel",
        "title": "COE: Open Verification Panel"
      },
      {
        "command": "coe.openPlanningWizard",
        "title": "COE: Open Planning Wizard"
      },
      {
        "command": "coe.scanCodebase",
        "title": "COE: Scan Codebase for Drift"
      },
      {
        "command": "coe.showDashboard",
        "title": "COE: Show Dashboard"
      },
      {
        "command": "coe.showEvolution",
        "title": "COE: Show Evolution Dashboard"
